@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@Html.ActionLink("New Customer", "New", null, new { @class = "btn btn-primary" })


@if (Model.Count <= 0)
{
    <p>We don't have customers yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Membership Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curstomer in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(curstomer.Name, "Edit", new { id = curstomer.Id })
                    </td>
                    <td>
                        @curstomer.MembershipType.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

